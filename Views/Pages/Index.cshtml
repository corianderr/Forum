@model List<Theme>
@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}
<h3 class="text-center">Themes</h3>
@if (Model.Count == 0)
{
    <p>There are no themes yet.</p>
}
else
{
    <table class="table">
        <tbody>
            @foreach (var item in Model)
            {
                <tr onclick="details(@item.Id)" style="cursor:pointer;">
                    <td>@item.Name</td>
                    <td>@item.CreationDate.ToString("MM,dd,yyyy")</td>
                    <td>@item.Creator.UserName</td>
                    <td>responses @item.ResponsesCount</td>
                </tr>
            }
        </tbody>
    </table>
}
@section Scripts
{
    <script>
   function details(themeId) {
       window.location.href = '@Url.Action("Details","Pages")?id=' + themeId;
           }
    </script>
}