<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Forum</title>
    <link rel="stylesheet" href="https://kit-free.fontawesome.com/releases/v5.11.1/css/free.min.css" media="all">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pages" asp-action="Index">Main page</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pages" asp-action="CreateTheme">Create theme</a>
                            </li>
                            <li class="nav-item" style="margin-left: auto; margin-right: auto;">
                                <form asp-action="Search" asp-controller="Pages">
                                    <div class="form-outline">
                                        <input style="text-align: center;" type="text" id="SearchString" class="form-control" placeholder="Search"
                                               aria-label="Search" />
                                    </div>
                                </form>
                            </li>
                            <li class="nav-item" style="margin-left:auto;margin-top:auto;margin-bottom:auto;">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input type="submit" value="Logout" class="nav-link text-light btn btn-secondary" />
                                </form>
                            </li>
                            <li>
                                <a class="nav-link text-dark btn btn-light" asp-area="" asp-controller="Account" asp-action="PersonalArea">Personal area</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" style="margin-left: auto; margin-right: auto;">
                                <form asp-action="Search" asp-controller="Pages">
                                    <div class="form-outline">
                                        <input style="text-align: center;" type="text" id="SearchString" class="form-control" placeholder="Search"
                                               aria-label="Search" />
                                    </div>
                                </form>
                            </li>
                            <li>
                                <a class="nav-link text-light btn btn-secondary" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark btn btn-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Forum - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
